<?xml version="1.0"?>
<Containers>
  <Date>2017-02-21</Date>
  <Beta>True</Beta>
  <Category>Other:</Category>
  <Name>Icinga 2</Name>
  <Project>https://www.icinga.com</Project>
  <Changes>
  </Changes>
  <Overview>
    The Icinga Monitoring Tool. (Base Version plus Web Frontend)
  </Overview>
  <Description>
    This Version combines the backend module (with the nagios plugins) with the web frontend. You need to have mysql running as well.
  </Description>
  <Registry>https://hub.docker.com/r/ricktap/icinga2/</Registry>
  <Repository>ricktap/icinga2</Repository>
  <Privileged>false</Privileged>
  <Network Default="bridge">bridge</Network>
  <Support/>
  <WebUI/>
  <Icon>https://github.com/ricktap/unraid-docker-templates/raw/master/images/icinga.png</Icon>
  <ExtraParams/>
  <Description/>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>7980</HostPort>
        <ContainerPort>80</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/usr/appdata/icinga-config</HostDir>
      <ContainerDir>/config</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/usr/appdata/icinga-webconfig</HostDir>
      <ContainerDir>/webconfig</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <WebUI>http://[IP]:[PORT:80]/</WebUI>
  <Environment>
    <Variable>
      <Name>DB_HOST</Name>
      <Value>[IP]:3306</Value>
    </Variable>
    <Variable>
      <Name>DB_ROOT_PASSWORD</Name>
      <Value>[IP]:3306</Value>
    </Variable>
    <Variable>
      <Name>DB_ICINGA_USER</Name>
      <Value>icinga</Value>
    </Variable>
    <Variable>
      <Name>DB_ICINGA_PASSWORD</Name>
      <Value>password</Value>
    </Variable>
  </Environment>
</Containers>
